#!/bin/sh
#
# Bootstrap configuration script for Makeconf
#
# Author:   Mark Heily <mark@heily.com>
#

printf 'checking for makeconf.. '
which configure >/dev/null 2>/dev/null
if [ $? != 0 ] ; then
  if [ -x ./makeconf ] ; then
    echo 'yes (using local copy)'
    exec makeconf/bin/configure $*
  else
    echo 'no'
    printf "*** ERROR ***\nMakeconf was not found.\n\nPlease install Makeconf from https://rubygems.org/"
    exit 1
  fi
else
  echo 'yes'
  exec configure $*
fi


